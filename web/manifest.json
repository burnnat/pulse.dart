{
  "manifest_version": 2,
  "name": "Syncthing",
  "short_name": "syncthing",
  "description": "Syncthing client for Chrome OS",

  "version": "0.0.1.0",

  "icons": {
    "128": "icon_128.png"
  },

  "app": {
    "background": {
      "scripts": [
        "packages/forge/js/forge.bundle.js",
        "main_background.dart.js"
      ]
    }
  },

  "permissions": [
    "fileSystemProvider",
    "storage"
  ],

  "sockets": {
    "udp": {
      "bind": "*",
      "send": "*"
    },
    "tcp": {
      "connect": "*"
    }
  }
}
